# 声明这是根配置文件，所有其他 .editorconfig 文件将被忽略
root = true

# 通用设置，适用于所有文件
[*]
# 使用空格进行缩进
indent_style = space
# 使用 LF 作为行结束符
end_of_line = lf
# 使用 UTF-8 编码
charset = utf-8
# 删除行尾的多余空白
trim_trailing_whitespace = true
# 确保文件以一个新行结尾
insert_final_newline = true

# 针对 Markdown 文件的特殊设置
[*.md]
# 不删除行尾的多余空白
trim_trailing_whitespace = false

# 针对 Makefile 的特殊设置
[Makefile]
# 使用制表符进行缩进
indent_style = tab
